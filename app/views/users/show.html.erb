<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
      	<%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
      <% if @user==current_user %>
        <h3> My Sites (<%= @user.sites.count %>)</h3>
      <% else %>
        <h3> Sites (<%= @user.sites.count %>)</h3>
      <% end %>
      <ol class="sites">
        <%= render @sites %>
      </ol>
      <%= will_paginate @sites %>
  </div>
</div>